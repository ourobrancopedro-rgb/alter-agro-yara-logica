                  "    const json = pm.response.json();",
                  "    const firstIssueUrl = pm.environment.get('idempotency_issue_url');",
                  "    pm.expect(json.issue_url).to.eql(firstIssueUrl);",
                  "});",
                  "",
                  "pm.test('No new issue created', () => {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.created).to.not.eql(true);",
